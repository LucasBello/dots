##############
# SCRATCHPAD #
##############

alt + minus 
	bspc-toggle-visibility scratch "$TERMINAL -g 100x30 -name scratch -e vit"

#########
# MODES #
#########
alt + {r, Escape}
    . $XDG_CONFIG_HOME/sxhkd/layout.mode

alt + e
    . $XDG_CONFIG_HOME/sxhkd/app.mode

alt + s
    . $XDG_CONFIG_HOME/sxhkd/system.mode
