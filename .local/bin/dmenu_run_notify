#!/bin/bash

# Fix for bspswallow to avoid unintended window swallowing
killall bspswallow

dmenu_run_log 

while pgrep -u $UID -x dmenu >/dev/null; do sleep 0.1; done 

msg="$(cat $HOME/.local/log/dmenu_out.log)"

if [ ! -z "$msg" ]
then
    notify-send "$msg"
fi

# Restart bspswallow
#bspswallow & exit
#bspc subscribe node_add | while read -r event; do
#    bspswallow & exit
#done &

sleep 0.1
bspswallow & exit
