#!/bin/bash
case $1 in
    h)
        bspc node -z left    $2 0
        bspc node -z right  -$2 0
    ;;
    j)
        bspc node -z top     0  $2
        bspc node -z bottom  0 -$2
    ;;
    k)
        bspc node -z top     0 -$2
        bspc node -z bottom  0  $2
    ;;
    l)
        bspc node -z left   -$2 0
        bspc node -z right   $2 0 
    ;;
esac
